<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    tools:context="com.onur.bitirme.KayitActivity">

    <EditText
        android:id="@+id/ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/kayit"
        android:layout_alignRight="@+id/kayit"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="18dp"

        android:ems="10"
        android:hint="Adınız"
        android:inputType="textPersonName"
        android:textColor="@android:color/black"
        android:textColorLink="@color/common_google_signin_btn_text_dark_focused" />

    <EditText
        android:id="@+id/soyad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ad"
        android:layout_alignStart="@+id/ad"
        android:layout_below="@+id/ad"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Soyadınız"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/soyad"
        android:layout_alignStart="@+id/soyad"
        android:layout_below="@+id/soyad"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:hint="Email Adresi"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/sifre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_below="@+id/email"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Şifre"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/txtAd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ad :"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="16sp"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_alignBaseline="@+id/ad"
        android:layout_alignBottom="@+id/ad"
        android:layout_alignLeft="@+id/kayit"
        android:layout_alignStart="@+id/kayit" />

    <TextView
        android:id="@+id/txtSoyad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/soyad"
        android:layout_alignBottom="@+id/soyad"
        android:layout_alignLeft="@+id/txtEmail"
        android:layout_alignStart="@+id/txtEmail"
        android:text="Soyad:"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-Mail Adresi :"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="16sp"
        android:layout_alignBaseline="@+id/email"
        android:layout_alignBottom="@+id/email"
        android:layout_alignLeft="@+id/txtAd"
        android:layout_alignStart="@+id/txtAd" />

    <TextView
        android:id="@+id/txtSifre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Şifre :"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="16sp"
        android:layout_alignBaseline="@+id/sifre"
        android:layout_alignBottom="@+id/sifre"
        android:layout_alignLeft="@+id/txtEmail"
        android:layout_alignStart="@+id/txtEmail" />

    <Button
        android:id="@+id/kayit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@android:color/holo_orange_light"
        android:text="Kaydol"
        android:layout_below="@+id/sifre"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
